{
  "name": "projectam",
  "version": "0.1.0",
  "private": true,
  "author": "Prakhar Bhandari <prakharb2k6@gmail.com>",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 http://localhost:3001 && NODE_ENV=development electron .\"",
    "build-electron": "NODE_ENV=production BUILD_TARGET=electron next build && electron-builder",
    "dist": "NODE_ENV=production BUILD_TARGET=electron next build && electron-builder --publish=never",
    "dist-linux": "NODE_ENV=production BUILD_TARGET=electron next build && npm run clean-sharp && electron-builder --linux",
    "clean-sharp": "rm -rf node_modules/@img || true"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "d3": "^7.9.0",
    "framer-motion": "^11.18.2",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.344.0",
    "next": "15.0.0",
    "react": "^18",
    "react-beautiful-dnd": "^13.1.1",
    "react-big-calendar": "^1.11.4",
    "react-dom": "^18",
    "react-force-graph": "^1.44.0",
    "tailwind-merge": "^2.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.67",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/electron": "^1.4.38",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-big-calendar": "^1.16.2",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.0.1",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "eslint-config-next": "15.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.projectam.app",
    "productName": "ProjectAM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json",
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "**/*",
          "!@img/**/*",
          "!sharp/vendor/**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}
